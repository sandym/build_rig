			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/../."
				],
				"pattern":[
					{
						"regexp": "^/work/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
