			}
		},
		{
			"label": "clearlinux build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"clearlinux_builder",
				"${input:linux}-${input:linux-compiler}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/../."
				],
				"pattern":[
					{
						"regexp": "^/work/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)clearlinux"
				}
			}
		},
		{
			"label": "msvc build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"msvc_builder",
				"${input:msvc}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"problemMatcher": "$msCompile",
			"osx": {
				"options": {
					"statusbar": {
						"label": "$(chevron-right)msvc",
						"hide": true
					}
				}
			}
		}
