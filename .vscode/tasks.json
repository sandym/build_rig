				],
				"pattern":[
					{
						"regexp": "^/work/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)centos8"
				}
			}
		},
		{
			"label": "alpine build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"alpine_builder",
				"${input:linux}-${input:linux-compiler}",
				"${config:build_rig.project}"
			],
			"presentation": {
