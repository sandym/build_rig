{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"inputs": [
		{
			"id": "darwin",
			"type": "pickString",
			"options": [
				"build-clang-debug",
				"test-clang-debug",
				"run-clang-debug",
				"clean-clang-debug",
				"build-clang-release",
				"test-clang-release",
				"run-clang-release",
				"clean-clang-release",
				// "build-gcc-debug",
				// "test-gcc-debug",
				// "run-gcc-debug",
				// "clean-gcc-debug",
				// "build-gcc-release",
				// "test-gcc-release",
				// "run-gcc-release",
				// "clean-gcc-release",
				"build-xcode-all",
				"clean-xcode-all"
			],
			"default": "build-clang-debug",
			"description": "action"
		},
		{
			"id": "gcc_only_choices",
			"type": "pickString",
			"options": [
				"build-gcc-debug",
				"test-gcc-debug",
				"run-gcc-debug",
				"clean-gcc-debug",
				"build-gcc-release",
				"test-gcc-release",
				"run-gcc-release",
				"clean-gcc-release"
			],
			"default": "build-gcc-debug",
			"description": "action"
		},
		{
			"id": "gcc_or_clang_choices",
			"type": "pickString",
			"options": [
				"build-gcc-debug",
				"test-gcc-debug",
				"run-gcc-debug",
				"clean-gcc-debug",
				"build-gcc-release",
				"test-gcc-release",
				"run-gcc-release",
				"clean-gcc-release",
				"build-clang-debug",
				"test-clang-debug",
				"run-clang-debug",
				"build-clang-release"
			],
			"default": "build-gcc-debug",
			"description": "action"
		}
	],
	"tasks": [
		{
			"label": "macos build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"darwin",
				"${input:darwin}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": "autoDetect"
			},
			"osx": {
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"options": {
					"statusbar": {
						"label": "$(arrow-right)macos",
						"hide": false
					}
				}
			}
		},
		{
			"label": "alpine build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"alpine_builder",
				"${input:gcc_or_clang_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)alpine"
				}
			}
		},
		{
			"label": "ubuntu build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"ubuntu_builder",
				"${input:gcc_only_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)ubuntu"
				}
			}
		},
		{
			"label": "ubuntu lts build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"ubuntu_lts_builder",
				"${input:gcc_only_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)ubuntu lts"
				}
			}
		},
		{
			"label": "centos9 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"centos9_builder",
				"${input:gcc_only_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)centos9"
				}
			}
		},
		{
			"label": "centos9 amd64 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"centos9_amd64_builder",
				"${input:gcc_only_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)centos9:amd64"
				}
			}
		},
		{
			"label": "compile_command setup",
			"type": "shell",
			"group": "none",
			"command": "npm",
			"args": [
				"install"
			],
			"options": {
				"cwd": "${workspaceFolder:build_rig}/watcher",
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"close": true,
				"clear": true
			}
		},
		{
			"label": "compile_command mkdir",
			"type": "shell",
			"group": "none",
			"command": "mkdir",
			"args": [
				"-p",
				"${userHome}/darwin_build/${config:build_rig.project_name}/clang-debug"
			],
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"close": true,
				"clear": true
			}
		},
		{
			"label": "compile_command",
			"type": "shell",
			"group": "none",
			"command": "npm",
			"args": [
				"run",
				"start"
			],
			"runOptions": {
				"runOn": "folderOpen"
			},
			"isBackground": true,

			"problemMatcher": [
			],
			"options": {
				"env": {
					"SOURCE_DIR": "${config:build_rig.project}",
					"BINARY_DIR": "${userHome}/darwin_build/${config:build_rig.project_name}/clang-debug"
				},
				"cwd": "${workspaceFolder:build_rig}/watcher",
				"statusbar": {
					"hide": true
				}
			},
			"dependsOn": [ "compile_command setup", "compile_command mkdir" ]
		}
	]
}
