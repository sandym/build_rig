			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/../."
				],
				"pattern":[
					{
						"regexp": "^/work/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)alpine"
				}
			}
		},
		{
			"label": "ubuntu build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"ubuntu_builder",
				"${input:linux}-${input:linux-compiler}",
