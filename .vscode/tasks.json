{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"inputs": [
		{
			"id": "darwin",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean",
				"xcode",
				"xcode-clean"
			],
			"default": "build",
			"description": "action"
		},
		{
			"id": "linux",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean"
			],
			"default": "build",
			"description": "action"
		},
		{
			"id": "linux+clang",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean",
				"build+clang",
				"test+clang",
				"clean+clang"
			],
			"default": "build",
			"description": "action"
		},
		{
			"id": "windows",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean",
				"VS"
			],
			"default": "build",
			"description": "action"
		}
	],
	"tasks": [
		{
			"label": "macos build",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "${workspaceRoot:build_rig}/scripts/darwin.sh",
			"args": [
				"${input:darwin}",
				"${config:build_rig.project}",
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)macos"
				}
			}
		},
		{
			"label": "centos7 build",
			"type": "shell",
			"group": "build",
			"command": "${workspaceRoot:build_rig}/scripts/docker.sh",
			"args": [
				"centos7_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)centos7"
				}
			}
		},
		{
			"label": "centos8 build",
			"type": "shell",
			"group": "build",
			"command": "${workspaceRoot:build_rig}/scripts/docker.sh",
			"args": [
				"centos8_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)centos8"
				}
			}
		},
		{
			"label": "alpine build",
			"type": "shell",
			"group": "build",
			"command": "${workspaceRoot:build_rig}/scripts/docker.sh",
			"args": [
				"alpine_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)alpine"
				}
			}
		},
		{
			"label": "ubuntu build",
			"type": "shell",
			"group": "build",
			"command": "${workspaceRoot:build_rig}/scripts/docker.sh",
			"args": [
				"ubuntu_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)ubuntu"
				}
			}
		},
		{
			"label": "clearlinux build",
			"type": "shell",
			"group": "build",
			"command": "${workspaceRoot:build_rig}/scripts/docker.sh",
			"args": [
				"clearlinux_builder",
				"${input:linux+clang}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)clearlinux"
				}
			}
		},
		{
			"label": "windows build",
			"type": "shell",
			"group": "build",
			"command": "${workspaceRoot:build_rig}/scripts/win.sh",
			"args": [
				"${input:windows}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)windows"
				}
			}
		}
	]
}
