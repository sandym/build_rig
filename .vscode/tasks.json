{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"inputs": [
		{
			"id": "darwin",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean",
				"xcode",
				"xcode-clean"
			],
			"default": "build",
			"description": "action"
		},
		{
			"id": "vs",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean",
				"vs",
				"vs-clean"
			],
			"default": "build",
			"description": "action"
		},
		{
			"id": "linux",
			"type": "pickString",
			"options": [
				"build-gcc-debug",
				"test-gcc-debug",
				"clean-gcc-debug",
				"build-gcc-release",
				"build-clang-debug",
				"test-clang-debug",
				"clean-clang-debug"
			],
			"default": "build",
			"description": "action"
		},
		{
			"id": "msvc",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean"
			],
			"default": "build",
			"description": "action"
		}
	],
	"tasks": [
		{
			"label": "macos build",
			"type": "shell",
			"group": "build",
			"command": "scripts/darwin.sh",
			"args": [
				"${input:darwin}",
				"${config:build_rig.project}",
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"osx": {
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"options": {
					"statusbar": {
						"label": "$(chevron-right)macos",
						"hide": false
					}
				}
			}
		},
		{
			"label": "windows build",
			"type": "shell",
			"group": "build",
			"command": "scripts/windows.sh",
			"args": [
				"${input:vs}",
				"${config:build_rig.project}",
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"windows": {
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"options": {
					"statusbar": {
						"label": "$(chevron-right)VS",
						"hide": false
					}
				}
			}
		},
		{
			"label": "centos7 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"centos7_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)centos7"
				}
			}
		},
		{
			"label": "centos8 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"centos8_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)centos8"
				}
			}
		},
		{
			"label": "alpine build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"alpine_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)alpine"
				}
			}
		},
		{
			"label": "ubuntu build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"ubuntu_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)ubuntu"
				}
			}
		},
		{
			"label": "clearlinux build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"clearlinux_builder",
				"${input:linux}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)clearlinux"
				}
			}
		},
		{
			"label": "msvc build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"msvc_builder",
				"${input:msvc}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"osx": {
				"options": {
					"statusbar": {
						"label": "$(chevron-right)msvc",
						"hide": true
					}
				}
			}
		}
	]
}
