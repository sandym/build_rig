{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"inputs": [
		{
			"id": "darwin",
			"type": "pickString",
			"options": [
				"build-debug",
				"test-debug",
				"run-debug",
				"clean-debug",
				"build-release",
				"test-release",
				"run-release",
				"clean-release",
				"xcode",
				"xcode-clean"
			],
			"default": "build-debug",
			"description": "action"
		},
		{
			"id": "vs",
			"type": "pickString",
			"options": [
				"build",
				"test",
				"clean",
				"vs",
				"vs-clean"
			],
			"default": "build",
			"description": "action"
		},
		{
			"id": "linux",
			"type": "pickString",
			"options": [
				"build-debug",
				"test-debug",
				"run-debug",
				"clean-debug",
				"build-release",
				"test-release",
				"run-release",
				"clean-release"
			],
			"default": "build-debug",
			"description": "action"
		},
		{
			"id": "linux-compiler",
			"type": "pickString",
			"options": [
				"default",
				"gcc8",
				"gcc9",
				"clang"
			],
			"default": "build-debug",
			"description": "action"
		},
		{
			"id": "msvc",
			"type": "pickString",
			"options": [
				"build-msvc-debug",
				"test-msvc-debug",
				"clean-msvc-debug"
			],
			"default": "build-msvc-debug",
			"description": "action"
		}
	],
	"tasks": [
		{
			"label": "macos build",
			"type": "shell",
			"group": "build",
			"command": "scripts/darwin.sh",
			"args": [
				"${input:darwin}",
				"${config:build_rig.project}",
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": "autoDetect"
			},
			"osx": {
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"options": {
					"statusbar": {
						"label": "$(chevron-right)macos",
						"hide": false
					}
				}
			}
		},
		{
			"label": "windows build",
			"type": "shell",
			"group": "build",
			"command": "scripts/windows.sh",
			"args": [
				"${input:vs}",
				"${config:build_rig.project}",
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"problemMatcher": "$msCompile",
			"windows": {
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"options": {
					"statusbar": {
						"label": "$(chevron-right)VS",
						"hide": false
					}
				}
			}
		},
		{
			"label": "centos7 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"centos7_builder",
				"${input:linux}-${input:linux-compiler}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/../."
				],
				"pattern":[
					{
						"regexp": "^/work/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(chevron-right)centos7"
				}
			}
		},
		{
			"label": "centos8 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/docker.sh",
			"args": [
				"centos8_builder",
				"${input:linux}-${input:linux-compiler}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
