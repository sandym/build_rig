					"label": "$(arrow-right)ubuntu"
				}
			}
		},
		{
			"label": "ubuntu lts build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"ubuntu_lts_builder",
				"${input:gcc_only_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)ubuntu_lts"
				}
			}
		}
	]
}
