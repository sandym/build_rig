{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "> build",
            "type": "shell",
            "command": "${workspaceFolder:build_rig}/scripts/build_driver.sh",
            "args": [
				"builder",
				"${workspaceFolder:test_project}",

				// 
				"Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot:test_project}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
        },
        {
            "label": "> clean",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "-ti",
				"builder",
				"/tmp/syncdir", "-clean", "/work/test_project"
            ],
            "group": "build",
			"problemMatcher": [],
			"options": {
				"statusbar": "hide"
			}
        }
    ]
}
