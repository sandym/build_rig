{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build centos7",
            "type": "shell",
            "command": "../scripts/do_build.sh",
            "args": [
                "centos7_builder"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^/work/code/(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "clean centos7",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "-ti",
                "centos7_builder",
                "rm", "-rf", "/work/sutils/tests/build"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
