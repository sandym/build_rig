{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"inputs": [
		{
			"id": "darwin",
			"type": "pickString",
			"options": [
				"build-clang-debug",
				"test-clang-debug",
				"clean-clang-debug",
				"build-clang-release",
				"test-clang-release",
				"clean-clang-release",
				// "build-gcc-debug",
				// "test-gcc-debug",
				// "clean-gcc-debug",
				// "build-gcc-release",
				// "test-gcc-release",
				// "clean-gcc-release",
				"build-xcode-all",
				"clean-xcode-all"
			],
			"default": "build-clang-debug",
			"description": "action"
		},
		{
			"id": "gcc_only_choices",
			"type": "pickString",
			"options": [
				"build-gcc-debug",
				"test-gcc-debug",
				"clean-gcc-debug",
				"build-gcc-release",
				"test-gcc-release",
				"clean-gcc-release"
			],
			"default": "build-gcc-debug",
			"description": "action"
		},
		{
			"id": "gcc_or_clang_choices",
			"type": "pickString",
			"options": [
				"build-gcc-debug",
				"test-gcc-debug",
				"clean-gcc-debug",
				"build-gcc-release",
				"test-gcc-release",
				"clean-gcc-release",
				"build-clang-debug",
				"test-clang-debug",
				"build-clang-release"
			],
			"default": "build-gcc-debug",
			"description": "action"
		}
	],
	"tasks": [
		{
			"label": "macos build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"darwin",
				"${input:darwin}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": "autoDetect"
			},
			"osx": {
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"options": {
					"statusbar": {
						"label": "$(arrow-right)macos",
						"hide": false
					}
				}
			}
		},
		{
			"label": "centos7 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"centos7_builder",
				"${input:gcc_only_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)centos7"
				}
			}
		},
		{
			"label": "centos9 build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"centos9_builder",
				"${input:gcc_only_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)centos9"
				}
			}
		},
		{
			"label": "alpine build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"alpine_builder",
				"${input:gcc_or_clang_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
				"statusbar": {
					"label": "$(arrow-right)alpine"
				}
			}
		},
		{
			"label": "ubuntu build",
			"type": "shell",
			"group": "build",
			"command": "scripts/driver.sh",
			"args": [
				"ubuntu_builder",
				"${input:gcc_or_clang_choices}",
				"${config:build_rig.project}"
			],
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${config:build_rig.project}/."
				],
				"pattern":[
					{
						"regexp": "^/work/.*/src/(.*):(\\d+):(\\d+):\\s+(error|note):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			},
			"options": {
