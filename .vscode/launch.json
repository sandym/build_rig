{
	"version": "0.2.0",
	"inputs": [
		{
			"id": "alpine",
			"type": "pickString",
			"options": [
				"gcc9-debug",
				"clang-debug"
			],
			"default": "gcc9-debug",
			"description": "action"
		},
		{
			"id": "ubuntu",
			"type": "pickString",
			"options": [
				"gcc10-debug",
				"clang-debug"
			],
			"default": "gcc10-debug",
			"description": "action"
		}
	],
	"configurations": [
		{
			"name": "Launch centos8",
			"type": "cppdbg",
			"request": "launch",

			"program": "/work/${config:build_rig.project_name}/centos8/gcc9-debug/${config:build_rig.project_name}",
			"args": [],
			"environment": [],
			
			"externalConsole": false,
			"cwd": "/work",
			"stopAtEntry": true,
			"MIMode": "gdb",

			"pipeTransport": {
				"pipeCwd": "${workspaceFolder:build_rig}",
				"pipeProgram": "/usr/local/bin/docker-compose",
				"pipeArgs": [
					"run", "--rm",
					"centos8_builder",
					"sh", "-c"
				],
				"debuggerPath": "/usr/local/bin/gdb"
			},
			"setupCommands": [
				{ "text": "set print thread-events off", "ignoreFailures": false },
				{ "text": "-enable-pretty-printing", "ignoreFailures": true }
			],
			"sourceFileMap":{
				"/work/${config:build_rig.project_name}/src": "${config:build_rig.project}"
			}
		},
		{
			"name": "Launch alpine",
			"type": "cppdbg",
			"request": "launch",

			"program": "/work/${config:build_rig.project_name}/alpine/${input:alpine}/${config:build_rig.project_name}",
			"args": [],
			"environment": [],
			
			"externalConsole": false,
			"cwd": "/work",
			"stopAtEntry": true,
			"MIMode": "gdb",

			"pipeTransport": {
				"pipeCwd": "${workspaceFolder:build_rig}",
				"pipeProgram": "/usr/local/bin/docker-compose",
				"pipeArgs": [
					"run", "--rm",
					"alpine_builder",
					"sh", "-c"
				],
				"debuggerPath": "/usr/local/bin/gdb"
			},
			"setupCommands": [
				{ "text": "set print thread-events off", "ignoreFailures": false },
				{ "text": "-enable-pretty-printing", "ignoreFailures": true }
			],
			"sourceFileMap":{
				"/work/${config:build_rig.project_name}/src": "${config:build_rig.project}"
			}
		},
		{
			"name": "Launch ubuntu",
			"type": "cppdbg",
			"request": "launch",

			"program": "/work/${config:build_rig.project_name}/ubuntu/${input:ubuntu}/${config:build_rig.project_name}",
			"args": [],
			"environment": [],
			
			"externalConsole": false,
			"cwd": "/work",
			"stopAtEntry": true,
			"MIMode": "gdb",

			"pipeTransport": {
				"pipeCwd": "${workspaceFolder:build_rig}",
				"pipeProgram": "/usr/local/bin/docker-compose",
				"pipeArgs": [
					"run", "--rm",
					"ubuntu_builder",
					"sh", "-c"
				],
				"debuggerPath": "/usr/local/bin/gdb"
			},
			"setupCommands": [
				{ "text": "set print thread-events off", "ignoreFailures": false },
				{ "text": "-enable-pretty-printing", "ignoreFailures": true }
			],
			"sourceFileMap":{
				"/work/${config:build_rig.project_name}/src": "${config:build_rig.project}"
			}
		}
	]
}
