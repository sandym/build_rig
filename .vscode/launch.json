{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch go file",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${file}",
			"args": [
				"${workspaceFolder:build_rig}/scripts",
				"builder",
				"${workspaceFolder:test_project}",

				// 
				"Debug"

			]
		},
		{
			"name": "Launch test_project",
			"type": "cppdbg",
			"request": "launch",
			"program": "/work/test_project/build/test_project",
			"args": [],
			"stopAtEntry": true,
			"cwd": "/work/test_project/build",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"pipeTransport": {
				"pipeCwd": "/usr/bin",
				"pipeProgram": "/usr/local/bin/docker",
				"pipeArgs": [
					"exec",
					"-i",
					"builder",
					"sh", "-c"
				],
				"debuggerPath": "/usr/bin/gdb"
			},
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
				}
			],

			//
			"sourceFileMap": {
				"/work/test_project": "${workspaceFolder:test_project}"
			}
		}
	]
}